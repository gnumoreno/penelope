<% provide(:title, 'New Book') %>
<h1>New Book</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @book do |f| %>
      
      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control' %>

      <%= f.label :pages %>
      <%= f.number_field :pages, class: 'form-control' %> </br>

      <%= f.submit "Create my book", class: "btn btn-primary" %> 
    <% end %>
  </div>
</div>