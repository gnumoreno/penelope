<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
      <%= @user.email %>
    </section>
  </aside>
</div>
<div class="row">
  <% if logged_in? %>
    <li> <%= link_to "Edit", edit_user_path %> </li>
    <li> <%= link_to "Log out", logout_path, method: "delete" %> </li>
  <% else %>
    <li> <%= link_to "Log in", login_path %> </li>
  <% end %>
</div>