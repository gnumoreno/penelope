<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
      <%= @user.email %>
    </section>
  </aside>
</div>
<div class="row">
  <% if current_user && (current_user.admin? || current_user.editor?) %>
    <%= link_to "User List", users_path %> </br>
  <% end %>
  <% if logged_in? %>
    <%= link_to "Edit", edit_user_path %> </br>
    <%= link_to "Log out", logout_path, method: "delete" %> </br>
  <% else %>
    <%= link_to "Log in", login_path %> </br>
  <% end %>
</div>